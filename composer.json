{
    "name": "jroman00/war-game",
    "description": "A simple PHP application to play the card game War",
    "config": {
      "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "repositories": [
      {
          "type": "vcs",
          "url": "git@github.com:jroman00/php-coding-standards.git"
      }
    ],
    "require": {
        "laravel/framework": "5.5.27"
    },
    "require-dev": {
        "jroman00/php-coding-standards": "^1.7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs -p --standard=ruleset.xml src/",
        "phpcbf": "./vendor/bin/phpcbf --standard=ruleset.xml src/"
    }
}
