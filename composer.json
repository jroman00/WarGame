{
    "name": "jroman00/war-game",
    "description": "A simple PHP application to play the card game War",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:jroman00/php-coding-standards.git"
        }
    ],
    "require": {
        "laravel/framework": "^6.20.12"
    },
    "require-dev": {
        "jroman00/php-coding-standards": "^1.7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs -p --standard=ruleset.xml src/",
        "lint-fix": "./vendor/bin/phpcbf --standard=ruleset.xml src/"
    }
}
